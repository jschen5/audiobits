{
  "name": "todomvc-flux",
  "version": "0.0.3",
  "description": "Example Flux architecture.",
  "repository": "https://github.com/facebook/flux",
  "main": "app/assets/app.js",
  "dependencies": {
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.12.0",
    "less": "^2.5.0"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "~0.1.17",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "catw": "^1.0.0"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc -' 'app/assets/css/*.less' -o public/css/bundle.css -v",
    "watch-js": "watchify -o public/js/bundle.js -v -d app/assets/js/app.js",
    "watch": "npm run watch-css && npm run watch-js",
    "build-css": "catw -c 'lessc -' 'app/assets/css/*.less' > public/css/bundle.css",
    "build-js": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > public/js/bundle.min.js",
    "build": "npm run build-css && npm run build-js",
    "test": "jest"
  },
  "author": "Bill Fisher",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./app/assets/js"
  }
}
